{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "kinnema",
  "version": "0.1.0",
  "identifier": "com.kinnema",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Kinnema",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": ""
    }
  },
  "bundle": {
    "active": true,
    "linux": {
      "appimage": {
        "files": {
          "/usr/share/README.md": "../README.md"
        }
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
