{
  "$schema": "http://json.schemastore.org/electron-builder",
  "appId": "com.kinnema.app",
  "productName": "Kinnema",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "dist/**/*",
    "electron/dist/**/*",
    "public/icons/**/*",
    "!electron/tsconfig.json",
    "!electron/*.ts",
    {
      "from": "./dist",
      "filter": ["**/*"]
    }
  ],
  "extraResources": [
    {
      "from": "public/icons",
      "to": "icons"
    }
  ],
  "publish": null,
  "mac": {
    "category": "public.app-category.entertainment",
    "icon": "public/icons/icon-512x512.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ]
  },
  "win": {
    "icon": "public/icons/icon-256x256.png",
    "target": [
      {
        "target": "nsis",
        "arch": ["x64", "ia32"]
      },
      {
        "target": "portable",
        "arch": ["x64", "ia32"]
      }
    ]
  },
  "linux": {
    "icon": "public/icons/icon-512x512.png",
    "category": "AudioVideo",
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
